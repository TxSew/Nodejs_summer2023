{{>header}}
 <h3 class="pt-4">Create New Product</h3>
<form method="POST" action="/courses/store" >
  <div class="form-group mt-4 w-50">
    <label for="name">Product Name</label>
    <input type="text" class="form-control" id="name" name="name" >
  </div>
  <div class="form-group mt-4 w-25">
    <label for="price">Price</label>
    <input type="text" class="form-control" id="price" name="price" >
  </div>
  <div class="form-group w-50">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" rows="3" name="description"></textarea>
  </div>
  <div class="form-group w-50">
    <label for="imageUrl">Image Url</label>
    <input type="text" class="form-control" id="imageUrl" name="imageUrl">
  </div>
  <div class="pt-2 text-center w-50">
      <button type="submit" class="btn btn-primary w-25 ">Add</button>
  </div>
</form>